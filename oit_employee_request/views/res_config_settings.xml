<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="res_config_settings_employee_request_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.employee.request</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="90"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Employee Requests" string="Employee Requests" data-key="oit_employee_request" >
                        <h2>Salary Request</h2>
                        <div class="row mt16 o_settings_container" name="salary_request">
                            <div class="col-12 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <div class="content-group">
                                         <div class="row mt16">
                                            <label for="req_salary_acc_debit_id"  class="col-2 o_light_label"/>
                                            <field name="req_salary_acc_debit_id" options="{'no_open': True, 'no_create': True}"/>
                                        </div>
                                        <div class="row mt16">
                                            <label for="req_salary_acc_credit_id"  class="col-2 o_light_label"/>
                                            <field name="req_salary_acc_credit_id" options="{'no_open': True, 'no_create': True}"/>
                                        </div>
                                       

                                         <div class="row mt16">
                                            <label for="req_salary_journal_id"  class="col-2 o_light_label"/>
                                            <field name="req_salary_journal_id" options="{'no_open': True, 'no_create': True}"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <h2>Leave Request</h2>
                        <div class="row mt16 o_settings_container" name="salary_request">
                            <div class="col-12 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <div class="content-group">
                                         <div class="row mt16">
                                            <label for="req_leave_acc_debit_id"  class="col-2 o_light_label"/>
                                            <field name="req_leave_acc_debit_id" options="{'no_open': True, 'no_create': True}"/>
                                        </div>
                                        <div class="row mt16">
                                            <label for="req_leave_acc_credit_id"  class="col-2 o_light_label"/>
                                            <field name="req_leave_acc_credit_id" options="{'no_open': True, 'no_create': True}"/>
                                        </div>
                                       
                                        <div class="row mt16">
                                            <label for="req_leave_journal_id"  class="col-2 o_light_label"/>
                                            <field name="req_leave_journal_id" options="{'no_open': True, 'no_create': True}"/>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <h2>OverTime Request</h2>
                        <div class="row mt16 o_settings_container" name="salary_request">
                            <div class="col-12 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <div class="content-group">
                                        <div class="row mt16">
                                            <label for="req_overtime_acc_debit_id"  class="col-2 o_light_label"/>
                                            <field name="req_overtime_acc_debit_id" options="{'no_open': True, 'no_create': True}"/>
                                        </div>
                                        <div class="row mt16">
                                            <label for="req_overtime_acc_credit_id"  class="col-2 o_light_label"/>
                                            <field name="req_overtime_acc_credit_id" options="{'no_open': True, 'no_create': True}"/>
                                        </div>
                                        

                                        <div class="row mt16">
                                            <label for="req_overtime_journal_id"  class="col-2 o_light_label"/>
                                            <field name="req_overtime_journal_id" options="{'no_open': True, 'no_create': True}"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <h2>Housing Request</h2>
                        <div class="row mt16 o_settings_container" name="salary_request">
                            <div class="col-12 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <div class="content-group">
                                        <div class="row mt16">
                                            <label for="req_hous_acc_debit_id"  class="col-2 o_light_label"/>
                                            <field name="req_hous_acc_debit_id" options="{'no_open': True, 'no_create': True}"/>
                                        </div>
                                        <div class="row mt16">
                                            <label for="req_hous_acc_credit_id"  class="col-2 o_light_label"/>
                                            <field name="req_hous_acc_credit_id" options="{'no_open': True, 'no_create': True}"/>
                                        </div>
                                        
                                        <div class="row mt16">
                                            <label for="req_hous_journal_id"  class="col-2 o_light_label"/>
                                            <field name="req_hous_journal_id" options="{'no_open': True, 'no_create': True}"/>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <h2>End of Service Request</h2>
                        <div class="row mt16 o_settings_container" name="salary_request">
                            <div class="col-12 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <div class="content-group">
                                        <div class="row mt16">
                                            <label for="req_endserv_acc_debit_id"  class="col-2 o_light_label"/>
                                            <field name="req_endserv_acc_debit_id" options="{'no_open': True, 'no_create': True}"/>
                                        </div>
                                        <div class="row mt16">
                                            <label for="req_endserv_acc_credit_id"  class="col-2 o_light_label"/>
                                            <field name="req_endserv_acc_credit_id" options="{'no_open': True, 'no_create': True}"/>
                                        </div>
                                        
                                        <div class="row mt16">
                                            <label for="req_endserv_journal_id"  class="col-2 o_light_label"/>
                                            <field name="req_endserv_journal_id" options="{'no_open': True, 'no_create': True}"/>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="action_employee_request_config" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'oit_employee_request', 'bin_size': False}</field>
        </record>

    </data>
</odoo>
